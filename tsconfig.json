{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strict": true,
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "types": ["react"]
    },
    "include": ["src"]
}
